<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="WindowBackground" Color="#FF121212"/>
    <SolidColorBrush x:Key="PrimaryColor" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="#FFBB86FC"/>
    <SolidColorBrush x:Key="TextColor" Color="White"/>
    <SolidColorBrush x:Key="SecondaryTextColor" Color="#B3FFFFFF"/>

    <LinearGradientBrush x:Key="MainBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF121212" Offset="0"/>
        <GradientStop Color="#FF1E1E1E" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="ButtonGradient" Color="#FFBB86FC"/>

        <Style x:Key="MainButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Background" Value="{StaticResource ButtonGradient}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style x:Key="TrackInfoPanelStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Background" Value="#801E1E1E"/>
        <Setter Property="BorderBrush" Value="#FFBB86FC"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
</ResourceDictionary>