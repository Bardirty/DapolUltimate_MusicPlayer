<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Xbox Theme Colors -->
    <SolidColorBrush x:Key="AeroDeepBlue" Color="#FF107C10"/>
    <!-- Xbox Green -->
    <SolidColorBrush x:Key="AeroBrightBlue" Color="#FF52B848"/>
    <!-- Lighter Xbox Green -->
    <SolidColorBrush x:Key="AeroLightBlue" Color="#FFA6D674"/>
    <!-- Very Light Green -->
    <SolidColorBrush x:Key="AeroGlassWhite" Color="#80FFFFFF"/>
    <!-- Semi-transparent white -->
    <SolidColorBrush x:Key="AeroHighlight" Color="#40FFFFFF"/>
    <!-- Highlight color -->
    <SolidColorBrush x:Key="AeroDarkGlass" Color="#80254617"/>
    <!-- Dark semi-transparent green -->

    <!-- Xbox Window Background - Dark with green accents -->
    <LinearGradientBrush x:Key="AeroWindowBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF0F0F0F" Offset="0"/>
        <!-- Near black -->
        <GradientStop Color="#FF161616" Offset="0.4"/>
        <!-- Very dark grey -->
        <GradientStop Color="#FF1D1D1D" Offset="0.7"/>
        <!-- Dark grey -->
        <GradientStop Color="#FF242424" Offset="1"/>
        <!-- Medium dark grey -->
    </LinearGradientBrush>

    <!-- Button Gradients for Xbox Theme -->
    <LinearGradientBrush x:Key="AeroButtonGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF107C10" Offset="0"/>
        <!-- Xbox Green -->
        <GradientStop Color="#FF0D6B0D" Offset="0.5"/>
        <!-- Slightly darker green -->
        <GradientStop Color="#FF095A09" Offset="1"/>
        <!-- Even darker green -->
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AeroButtonPressed" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF085608" Offset="0"/>
        <!-- Dark green for pressed state -->
        <GradientStop Color="#FF107C10" Offset="0.6"/>
        <!-- Xbox Green -->
        <GradientStop Color="#FF1F9A1F" Offset="1"/>
        <!-- Brighter green for bottom highlight -->
    </LinearGradientBrush>

    <!-- Button Styles -->
    <Style x:Key="AeroButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource AeroGlassWhite}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="MainBorder" 
                            CornerRadius="2" 
                            Background="{StaticResource AeroButtonGradient}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.5" Color="#FF107C10"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"
                                      RecognizesAccessKey="True"
                                      Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <Border x:Name="HighlightBorder" 
                            CornerRadius="2" 
                            BorderBrush="{StaticResource AeroHighlight}"
                            BorderThickness="1"
                            Opacity="0"
                            IsHitTestVisible="False"/>
                        <Border x:Name="GlassOverlay" 
                            CornerRadius="1" 
                            Background="{StaticResource AeroGlassWhite}"
                            Opacity="0.1"
                            Margin="1"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MainBorder" Property="Opacity" Value="0.95"/>
                            <Setter TargetName="HighlightBorder" Property="Opacity" Value="1"/>
                            <Setter TargetName="GlassOverlay" Property="Opacity" Value="0.2"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="MainBorder" Property="Background" Value="{StaticResource AeroButtonPressed}"/>
                            <Setter TargetName="MainBorder" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="1"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="GlassOverlay" Property="Opacity" Value="0.05"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="AeroRoundButtonStyle" TargetType="Button" BasedOn="{StaticResource AeroButtonStyle}">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse x:Name="MainEllipse" 
                            Fill="{StaticResource AeroButtonGradient}"
                            Stroke="{StaticResource AeroGlassWhite}"
                            StrokeThickness="1">
                            <Ellipse.Effect>
                                <DropShadowEffect BlurRadius="6" ShadowDepth="1" Opacity="0.4" Color="#FF107C10"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"
                                  RecognizesAccessKey="True"/>
                        <Ellipse x:Name="HighlightEllipse" 
                            Stroke="{StaticResource AeroHighlight}"
                            StrokeThickness="1"
                            Opacity="0"
                            IsHitTestVisible="False"/>
                        <Ellipse x:Name="GlassEllipse" 
                            Fill="{StaticResource AeroGlassWhite}"
                            Opacity="0.1"
                            Margin="1"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MainEllipse" Property="Opacity" Value="0.95"/>
                            <Setter TargetName="HighlightEllipse" Property="Opacity" Value="1"/>
                            <Setter TargetName="GlassEllipse" Property="Opacity" Value="0.2"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="MainEllipse" Property="Fill" Value="{StaticResource AeroButtonPressed}"/>
                            <Setter TargetName="MainEllipse" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="1"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="GlassEllipse" Property="Opacity" Value="0.05"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="WindowControlButtonStyle" TargetType="Button" BasedOn="{StaticResource AeroRoundButtonStyle}">
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="5,0,0,0"/>
    </Style>

    <Style x:Key="AeroListBoxItemStyle" TargetType="ListBoxItem">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Grid>
                        <Border x:Name="MainBorder" 
                            CornerRadius="0" 
                            Background="Transparent"
                            BorderThickness="0">
                            <Border.Effect>
                                <BlurEffect Radius="0"/>
                            </Border.Effect>
                            <ContentPresenter Margin="8,5"/>
                        </Border>
                        <Border x:Name="SelectionBorder" 
                            CornerRadius="0" 
                            Background="#60107C10"
                            BorderBrush="#40FFFFFF"
                            BorderThickness="0,0,0,0"
                            Opacity="0"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="SelectionBorder" Property="Opacity" Value="1"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MainBorder" Property="Background" Value="#20107C10"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="AeroSliderStyle" TargetType="Slider">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Height" Value="10"/>
        <Setter Property="IsMoveToPointEnabled" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <Rectangle x:Name="TrackBackground" 
                           Fill="#40107C10" 
                           Height="4"
                           VerticalAlignment="Center"
                           RadiusX="0" RadiusY="0">
                            <Rectangle.Effect>
                                <DropShadowEffect BlurRadius="2" ShadowDepth="0" Opacity="0.3" Color="#FF107C10"/>
                            </Rectangle.Effect>
                        </Rectangle>

                        <Rectangle x:Name="TrackFill" 
                           Fill="{StaticResource AeroBrightBlue}" 
                           Height="4"
                           VerticalAlignment="Center"
                           RadiusX="0" RadiusY="0"
                           HorizontalAlignment="Left"/>

                        <Track x:Name="PART_Track">
                            <Track.Thumb>
                                <Thumb Width="12" Height="12">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="Thumb">
                                            <Ellipse Fill="White" 
                                             Stroke="{StaticResource AeroDeepBlue}" 
                                             StrokeThickness="1">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.5" Color="#FF107C10"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>