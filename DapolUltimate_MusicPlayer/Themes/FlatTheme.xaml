<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="WindowBackground" Color="#FF2196F3"/>
    <SolidColorBrush x:Key="PrimaryColor" Color="#FF1976D2"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="#FF0D47A1"/>
    <SolidColorBrush x:Key="TextColor" Color="White"/>
    <SolidColorBrush x:Key="SecondaryTextColor" Color="#E0FFFFFF"/>

    <LinearGradientBrush x:Key="MainBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF2196F3" Offset="0"/>
        <GradientStop Color="#FF1976D2" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="ButtonGradient" Color="#FF1976D2"/>

    <!-- Brushes used by the track information panel -->
    <SolidColorBrush x:Key="TrackInfoBackground" Color="#801976D2"/>
    <SolidColorBrush x:Key="AlbumArtBackground" Color="#801976D2"/>
    <SolidColorBrush x:Key="TrackTextForeground" Color="White"/>
    <SolidColorBrush x:Key="TrackArtistForeground" Color="#E0FFFFFF"/>
    <SolidColorBrush x:Key="TimeSeparatorForeground" Color="#80FFFFFF"/>

    <Style x:Key="MainButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="{StaticResource ButtonGradient}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style x:Key="TrackInfoPanelStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Background" Value="{DynamicResource TrackInfoBackground}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
</ResourceDictionary>