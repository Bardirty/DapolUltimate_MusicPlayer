<Window x:Class="DapolUltimate_MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dapol Ultimate Player" Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Loaded="MainWindow_Loaded">

    <Window.Resources>
        <!-- Цветовая палитра Frutiger Aero -->
        <SolidColorBrush x:Key="AeroDeepBlue" Color="#FF0078D7"/>
        <SolidColorBrush x:Key="AeroBrightBlue" Color="#FF4DAEEF"/>
        <SolidColorBrush x:Key="AeroLightBlue" Color="#FFB4E0FA"/>
        <SolidColorBrush x:Key="AeroGlassWhite" Color="#80FFFFFF"/>
        <SolidColorBrush x:Key="AeroHighlight" Color="#40FFFFFF"/>
        <SolidColorBrush x:Key="AeroDarkGlass" Color="#803366AA"/>

        <!-- Градиенты -->
        <LinearGradientBrush x:Key="AeroWindowBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FF0066B4" Offset="0"/>
            <GradientStop Color="#FF0078D7" Offset="0.3"/>
            <GradientStop Color="#FF4DAEEF" Offset="0.7"/>
            <GradientStop Color="#FFB4E0FA" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="AeroButtonGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFB4E0FA" Offset="0"/>
            <GradientStop Color="#FF6FC7F7" Offset="0.4"/>
            <GradientStop Color="#FF4DAEEF" Offset="0.5"/>
            <GradientStop Color="#FF0078D7" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="AeroButtonPressed" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FF0078D7" Offset="0"/>
            <GradientStop Color="#FF4DAEEF" Offset="0.6"/>
            <GradientStop Color="#FFB4E0FA" Offset="1"/>
        </LinearGradientBrush>

        <!-- Стили -->
        <Style x:Key="AeroButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource AeroGlassWhite}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="MainBorder" 
                                    CornerRadius="6" 
                                    Background="{StaticResource AeroButtonGradient}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.5" Color="#FF0078D7"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"
                                              Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <Border x:Name="HighlightBorder" 
                                    CornerRadius="6" 
                                    BorderBrush="{StaticResource AeroHighlight}"
                                    BorderThickness="1"
                                    Opacity="0"
                                    IsHitTestVisible="False"/>
                            <Border x:Name="GlassOverlay" 
                                    CornerRadius="5" 
                                    Background="{StaticResource AeroGlassWhite}"
                                    Opacity="0.2"
                                    Margin="1"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="Opacity" Value="0.95"/>
                                <Setter TargetName="HighlightBorder" Property="Opacity" Value="1"/>
                                <Setter TargetName="GlassOverlay" Property="Opacity" Value="0.3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="MainBorder" Property="Background" Value="{StaticResource AeroButtonPressed}"/>
                                <Setter TargetName="MainBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="GlassOverlay" Property="Opacity" Value="0.1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AeroRoundButtonStyle" TargetType="Button" BasedOn="{StaticResource AeroButtonStyle}">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="MainEllipse" 
                                    Fill="{StaticResource AeroButtonGradient}"
                                    Stroke="{StaticResource AeroGlassWhite}"
                                    StrokeThickness="1">
                                <Ellipse.Effect>
                                    <DropShadowEffect BlurRadius="6" ShadowDepth="1" Opacity="0.4" Color="#FF0078D7"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                            <Ellipse x:Name="HighlightEllipse" 
                                    Stroke="{StaticResource AeroHighlight}"
                                    StrokeThickness="1"
                                    Opacity="0"
                                    IsHitTestVisible="False"/>
                            <Ellipse x:Name="GlassEllipse" 
                                    Fill="{StaticResource AeroGlassWhite}"
                                    Opacity="0.2"
                                    Margin="1"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainEllipse" Property="Opacity" Value="0.95"/>
                                <Setter TargetName="HighlightEllipse" Property="Opacity" Value="1"/>
                                <Setter TargetName="GlassEllipse" Property="Opacity" Value="0.3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="MainEllipse" Property="Fill" Value="{StaticResource AeroButtonPressed}"/>
                                <Setter TargetName="MainEllipse" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="GlassEllipse" Property="Opacity" Value="0.1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WindowControlButtonStyle" TargetType="Button" BasedOn="{StaticResource AeroRoundButtonStyle}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>

        <Style x:Key="AeroListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid>
                            <Border x:Name="MainBorder" 
                                    CornerRadius="4" 
                                    Background="Transparent"
                                    BorderThickness="0">
                                <Border.Effect>
                                    <BlurEffect Radius="0"/>
                                </Border.Effect>
                                <ContentPresenter Margin="8,5"/>
                            </Border>
                            <Border x:Name="SelectionBorder" 
                                    CornerRadius="4" 
                                    Background="#604DAEEF"
                                    BorderBrush="#80FFFFFF"
                                    BorderThickness="1"
                                    Opacity="0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="SelectionBorder" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="Background" Value="#204DAEEF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AeroSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="10"/>
            <Setter Property="IsMoveToPointEnabled" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Rectangle x:Name="TrackBackground" 
                                   Fill="#400078D7" 
                                   Height="4"
                                   VerticalAlignment="Center"
                                   RadiusX="2" RadiusY="2">
                                <Rectangle.Effect>
                                    <DropShadowEffect BlurRadius="2" ShadowDepth="0" Opacity="0.3" Color="#FF0078D7"/>
                                </Rectangle.Effect>
                            </Rectangle>

                            <Rectangle x:Name="TrackFill" 
                                   Fill="{StaticResource AeroBrightBlue}" 
                                   Height="4"
                                   VerticalAlignment="Center"
                                   RadiusX="2" RadiusY="2"
                                   HorizontalAlignment="Left"/>

                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Width="12" Height="12">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Fill="White" 
                                                     Stroke="{StaticResource AeroDeepBlue}" 
                                                     StrokeThickness="1">
                                                    <Ellipse.Effect>
                                                        <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.5" Color="#FF0078D7"/>
                                                    </Ellipse.Effect>
                                                </Ellipse>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Основной контейнер с эффектом стекла -->
    <Grid>
        <!-- Фон с размытием (имитация Aero Glass) -->
        <Border Background="{StaticResource AeroWindowBackground}" 
                CornerRadius="10"
                Margin="5">
            <Border.Effect>
                <BlurEffect Radius="0"/>
            </Border.Effect>
        </Border>

        <!-- Основное содержимое с одним дочерним элементом -->
        <Border Background="{StaticResource AeroWindowBackground}" 
                CornerRadius="10"
                BorderBrush="#80FFFFFF"
                BorderThickness="1"
                Margin="5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5" Color="#FF0078D7"/>
            </Border.Effect>

            <!-- Основной контейнер для всего содержимого -->
            <Grid>
                <!-- Кнопки управления окном -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top"
                            Margin="0,10,10,0">
                    <Button x:Name="MinimizeButton" 
                            Content="_" 
                            Style="{StaticResource WindowControlButtonStyle}"
                            Click="MinimizeButton_Click"/>
                    <Button x:Name="CloseButton" 
                            Content="X" 
                            Style="{StaticResource WindowControlButtonStyle}"
                            Click="CloseButton_Click"/>
                </StackPanel>

                <!-- Основное содержимое окна -->
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="DAPOL ULTIMATE PLAYER"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   FontFamily="Segoe UI Light"
                                   Foreground="White"
                                   HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="2" ShadowDepth="1" Opacity="0.5" Color="#FF0078D7"/>
                            </TextBlock.Effect>
                        </TextBlock>

                        <TextBlock Text="PREMIUM MUSIC EXPERIENCE"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   FontFamily="Segoe UI"
                                   Foreground="#C0FFFFFF"
                                   HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="1" ShadowDepth="1" Opacity="0.3" Color="#FF0078D7"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>

                    <!-- Основное содержимое -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>

                        <!-- Секция плеера -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <!-- Информация о треке -->
                            <Border CornerRadius="10" 
                                    Height="90" 
                                    Background="#804DAEEF"
                                    Margin="0,0,0,20"
                                    BorderBrush="#80FFFFFF"
                                    BorderThickness="1">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="5" ShadowDepth="0" Opacity="0.3" Color="#FF0078D7"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Обложка альбома -->
                                    <Border Width="70" Height="70" Margin="15,0,0,0" 
                                            CornerRadius="10" Background="#800078D7" 
                                            VerticalAlignment="Center"
                                            BorderBrush="#80FFFFFF"
                                            BorderThickness="1">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="3" ShadowDepth="1" Opacity="0.3" Color="#FF0078D7"/>
                                        </Border.Effect>
                                        <TextBlock Text="♪" 
                                                   FontSize="36" 
                                                   Foreground="White" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Информация о треке -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,15,0">
                                        <TextBlock x:Name="TrackTitle"
                                                   Text="No track loaded"
                                                   FontSize="22"
                                                   FontWeight="Bold"
                                                   FontFamily="Segoe UI"
                                                   Foreground="White"
                                                   TextTrimming="CharacterEllipsis">
                                            <TextBlock.Effect>
                                                <DropShadowEffect BlurRadius="1" ShadowDepth="1" Opacity="0.2" Color="#FF0078D7"/>
                                            </TextBlock.Effect>
                                        </TextBlock>

                                        <TextBlock x:Name="TrackArtist"
                                                   Text="Unknown Artist"
                                                   FontSize="16"
                                                   FontFamily="Segoe UI"
                                                   Foreground="#E0FFFFFF"
                                                   Margin="0,5,0,0"
                                                   TextTrimming="CharacterEllipsis">
                                            <TextBlock.Effect>
                                                <DropShadowEffect BlurRadius="1" ShadowDepth="1" Opacity="0.2" Color="#FF0078D7"/>
                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Отображение времени -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="0,0,15,0">
                                        <TextBlock x:Name="CurrentTimeText"
                                                   Text="00:00"
                                                   FontSize="18"
                                                   FontFamily="Consolas"
                                                   FontWeight="Bold"
                                                   Foreground="White"/>
                                        <TextBlock Text="/"
                                                   FontSize="18"
                                                   FontFamily="Consolas"
                                                   FontWeight="Bold"
                                                   Foreground="#80FFFFFF"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="TotalTimeText"
                                                   Text="00:00"
                                                   FontSize="18"
                                                   FontFamily="Consolas"
                                                   FontWeight="Bold"
                                                   Foreground="#80FFFFFF"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Управление -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,20">
                                <Button Content="⏮" Style="{StaticResource AeroRoundButtonStyle}" Click="PreviousButton_Click"/>
                                <Button Content="📂" Style="{StaticResource AeroRoundButtonStyle}" Click="LoadFileButton_Click"/>
                                <Button x:Name="PlayPauseButton" Content="⏯" Style="{StaticResource AeroRoundButtonStyle}" 
                                        Width="50" Height="50" FontSize="20" Click="PlayPauseButton_Click"/>
                                <Button Content="⏹" Style="{StaticResource AeroRoundButtonStyle}" Click="StopButton_Click"/>
                                <Button Content="⏭" Style="{StaticResource AeroRoundButtonStyle}" Click="NextButton_Click"/>
                            </StackPanel>

                            <!-- Ползунок прогресса -->
                            <Slider x:Name="SeekSlider" Style="{StaticResource AeroSliderStyle}"
                                    Minimum="0"
                                    Maximum="100"
                                    Margin="0,0,0,20"
                                    ValueChanged="SeekSlider_ValueChanged"/>

                            <!-- Управление громкостью -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Button x:Name="MuteButton" 
                                        Content="🔊" 
                                        Style="{StaticResource AeroRoundButtonStyle}"
                                        Click="MuteButton_Click"/>

                                <Slider x:Name="VolumeSlider"
                                        Style="{StaticResource AeroSliderStyle}"
                                        Width="250" 
                                        Minimum="0" 
                                        Maximum="1"
                                        Value="0.5"
                                        ValueChanged="VolumeSlider_ValueChanged"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Секция плейлиста -->
                        <Border Grid.Column="1" CornerRadius="10" Background="{StaticResource AeroDarkGlass}"
                                BorderBrush="#80FFFFFF"
                                BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="5" ShadowDepth="0" Opacity="0.3" Color="#FF0078D7"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="PLAYLIST"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           Margin="10,10,10,5">
                                    <TextBlock.Effect>
                                        <DropShadowEffect BlurRadius="1" ShadowDepth="1" Opacity="0.2" Color="#FF0078D7"/>
                                    </TextBlock.Effect>
                                </TextBlock>

                                <ListBox x:Name="PlaylistBox" 
                                         Grid.Row="1"
                                         ItemsSource="{Binding PlaylistDisplayNames}"
                                         ItemContainerStyle="{StaticResource AeroListBoxItemStyle}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         VirtualizingStackPanel.IsVirtualizing="True"
                                         VirtualizingStackPanel.VirtualizationMode="Recycling"
                                         SelectionChanged="PlaylistBox_SelectionChanged">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" 
                                                       TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding}"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,5">
                                    <Button Content="+" Width="25" Height="25" Margin="0,0,5,0"
                                            Style="{StaticResource AeroRoundButtonStyle}" FontSize="14"
                                            Click="AddToPlaylist_Click"/>
                                    <Button Content="-" Width="25" Height="25"
                                            Style="{StaticResource AeroRoundButtonStyle}" FontSize="14"
                                            Click="RemoveFromPlaylist_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Выбор темы -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,10">
                        <Button Content="Aero Theme" Style="{StaticResource AeroButtonStyle}" Click="AeroTheme_Click"/>
                        <Button Content="Flat Theme" Style="{StaticResource AeroButtonStyle}" Click="FlatTheme_Click"/>
                        <Button Content="Dark Theme" Style="{StaticResource AeroButtonStyle}" Click="DarkTheme_Click"/>
                    </StackPanel>

                    <!-- Статус бар -->
                    <StatusBar Grid.Row="3" Background="#400078D7"
                               BorderBrush="#80FFFFFF"
                               BorderThickness="0,1,0,0">
                        <StatusBarItem>
                            <TextBlock x:Name="StatusText" Text="Ready" Foreground="White"/>
                        </StatusBarItem>
                        <StatusBarItem HorizontalAlignment="Right">
                            <TextBlock Text="{Binding ElementName=PlaylistBox, Path=Items.Count, StringFormat='Tracks: {0}'}" 
                                       Foreground="White"/>
                        </StatusBarItem>
                    </StatusBar>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>