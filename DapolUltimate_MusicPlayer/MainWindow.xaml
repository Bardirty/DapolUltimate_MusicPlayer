<Window x:Class="DapolUltimate_MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dapol Ultimate Player" Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Loaded="MainWindow_Loaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="BaseStyles.xaml"/>
                <ResourceDictionary Source="/Themes/AeroTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <!-- Основной контейнер с эффектом стекла -->
    <Grid>
        <!-- Фон с размытием (имитация Aero Glass) -->
        <Border Background="{StaticResource AeroWindowBackground}" 
                CornerRadius="10"
                Margin="5">
            <Border.Effect>
                <BlurEffect Radius="0"/>
            </Border.Effect>
        </Border>

        <!-- Основное содержимое с одним дочерним элементом -->
        <Border Background="{StaticResource AeroWindowBackground}" 
                CornerRadius="10"
                BorderBrush="#80FFFFFF"
                BorderThickness="1"
                Margin="5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5" Color="#FF0078D7"/>
            </Border.Effect>

            <!-- Основной контейнер для всего содержимого -->
            <Grid>
                <!-- Кнопки управления окном -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top"
                            Margin="0,10,10,0">
                    <Button x:Name="MinimizeButton" 
                            Content="_" 
                            Style="{StaticResource WindowControlButtonStyle}"
                            Click="MinimizeButton_Click"/>
                    <Button x:Name="CloseButton" 
                            Content="X" 
                            Style="{StaticResource WindowControlButtonStyle}"
                            Click="CloseButton_Click"/>
                </StackPanel>

                <!-- Основное содержимое окна -->
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="DAPOL ULTIMATE PLAYER"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   FontFamily="Segoe UI Light"
                                   Foreground="White"
                                   HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="2" ShadowDepth="1" Opacity="0.5" Color="#FF0078D7"/>
                            </TextBlock.Effect>
                        </TextBlock>

                        <TextBlock Text="PREMIUM MUSIC EXPERIENCE"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   FontFamily="Segoe UI"
                                   Foreground="#C0FFFFFF"
                                   HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="1" ShadowDepth="1" Opacity="0.3" Color="#FF0078D7"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>

                    <!-- Основное содержимое -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>

                        <!-- Секция плеера -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <!-- Информация о треке -->
                            <Border CornerRadius="10" 
                                    Height="90" 
                                    Background="#804DAEEF"
                                    Margin="0,0,0,20"
                                    BorderBrush="#80FFFFFF"
                                    BorderThickness="1">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="5" ShadowDepth="0" Opacity="0.3" Color="#FF0078D7"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Обложка альбома -->
<Border Width="70" Height="70" Margin="15,0,0,0" 
        CornerRadius="10" 
        Background="#800078D7" 
        VerticalAlignment="Center"
        BorderBrush="#80FFFFFF"
        BorderThickness="1"
        ClipToBounds="True">
    <Border.Clip>
        <RectangleGeometry Rect="0,0,70,70" RadiusX="10" RadiusY="10"/>
    </Border.Clip>
    <Border.Effect>
        <DropShadowEffect BlurRadius="3" ShadowDepth="1" Opacity="0.3" Color="#FF0078D7"/>
    </Border.Effect>
    <Image x:Name="AlbumArtImage" Stretch="UniformToFill"/>
</Border>

                                    <!-- Информация о треке -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,15,0">
                                        <TextBlock x:Name="TrackTitle"
                                                   Text="No track loaded"
                                                   FontSize="22"
                                                   FontWeight="Bold"
                                                   FontFamily="Segoe UI"
                                                   Foreground="White"
                                                   TextTrimming="CharacterEllipsis">
                                            <TextBlock.Effect>
                                                <DropShadowEffect BlurRadius="1" ShadowDepth="1" Opacity="0.2" Color="#FF0078D7"/>
                                            </TextBlock.Effect>
                                        </TextBlock>

                                        <TextBlock x:Name="TrackArtist"
                                                   Text="Unknown Artist"
                                                   FontSize="16"
                                                   FontFamily="Segoe UI"
                                                   Foreground="#E0FFFFFF"
                                                   Margin="0,5,0,0"
                                                   TextTrimming="CharacterEllipsis">
                                            <TextBlock.Effect>
                                                <DropShadowEffect BlurRadius="1" ShadowDepth="1" Opacity="0.2" Color="#FF0078D7"/>
                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Отображение времени -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="0,0,15,0">
                                        <TextBlock x:Name="CurrentTimeText"
                                                   Text="00:00"
                                                   FontSize="18"
                                                   FontFamily="Consolas"
                                                   FontWeight="Bold"
                                                   Foreground="White"/>
                                        <TextBlock Text="/"
                                                   FontSize="18"
                                                   FontFamily="Consolas"
                                                   FontWeight="Bold"
                                                   Foreground="#80FFFFFF"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="TotalTimeText"
                                                   Text="00:00"
                                                   FontSize="18"
                                                   FontFamily="Consolas"
                                                   FontWeight="Bold"
                                                   Foreground="#80FFFFFF"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Управление -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,20">
                                <Button Content="⏮" Style="{StaticResource AeroRoundButtonStyle}" Click="PreviousButton_Click"/>
                                <Button Content="📂" Style="{StaticResource AeroRoundButtonStyle}" Click="LoadFileButton_Click"/>
                                <Button x:Name="PlayPauseButton" Content="⏯" Style="{StaticResource AeroRoundButtonStyle}" 
                                        Width="50" Height="50" FontSize="20" Click="PlayPauseButton_Click"/>
                                <Button Content="⏹" Style="{StaticResource AeroRoundButtonStyle}" Click="StopButton_Click"/>
                                <Button Content="⏭" Style="{StaticResource AeroRoundButtonStyle}" Click="NextButton_Click"/>
                            </StackPanel>

                            <!-- Ползунок прогресса -->
                            <Slider x:Name="SeekSlider" Style="{StaticResource AeroSliderStyle}"
                                    Minimum="0"
                                    Maximum="100"
                                    Margin="0,0,0,20"
                                    ValueChanged="SeekSlider_ValueChanged"/>

                            <!-- Управление громкостью -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Button x:Name="MuteButton" 
                                        Content="🔊" 
                                        Style="{StaticResource AeroRoundButtonStyle}"
                                        Click="MuteButton_Click"/>

                                <Slider x:Name="VolumeSlider"
                                        Style="{StaticResource AeroSliderStyle}"
                                        Width="250" 
                                        Minimum="0" 
                                        Maximum="1"
                                        Value="0.5"
                                        ValueChanged="VolumeSlider_ValueChanged"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Секция плейлиста -->
                        <Border Grid.Column="1" CornerRadius="10" Background="{StaticResource AeroDarkGlass}"
                                BorderBrush="#80FFFFFF"
                                BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="5" ShadowDepth="0" Opacity="0.3" Color="#FF0078D7"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="PLAYLIST"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           Margin="10,10,10,5">
                                    <TextBlock.Effect>
                                        <DropShadowEffect BlurRadius="1" ShadowDepth="1" Opacity="0.2" Color="#FF0078D7"/>
                                    </TextBlock.Effect>
                                </TextBlock>

                                <ListBox x:Name="PlaylistBox" 
                                         Grid.Row="1"
                                         ItemsSource="{Binding PlaylistDisplayNames}"
                                         ItemContainerStyle="{StaticResource AeroListBoxItemStyle}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         VirtualizingStackPanel.IsVirtualizing="True"
                                         VirtualizingStackPanel.VirtualizationMode="Recycling"
                                         SelectionChanged="PlaylistBox_SelectionChanged">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" 
                                                       TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding}"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,5">
                                    <Button Content="+" Width="25" Height="25" Margin="0,0,5,0"
                                            Style="{StaticResource AeroRoundButtonStyle}" FontSize="14"
                                            Click="AddToPlaylist_Click"/>
                                    <Button Content="-" Width="25" Height="25"
                                            Style="{StaticResource AeroRoundButtonStyle}" FontSize="14"
                                            Click="RemoveFromPlaylist_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Выбор темы -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,10">
                        <Button Content="Aero Theme" Style="{StaticResource AeroButtonStyle}" Click="AeroTheme_Click"/>
                        <Button Content="Flat Theme" Style="{StaticResource AeroButtonStyle}" Click="FlatTheme_Click"/>
                        <Button Content="Dark Theme" Style="{StaticResource AeroButtonStyle}" Click="DarkTheme_Click"/>
                    </StackPanel>

                    <!-- Статус бар -->
                    <StatusBar Grid.Row="3" Background="#400078D7"
                               BorderBrush="#80FFFFFF"
                               BorderThickness="0,1,0,0">
                        <StatusBarItem>
                            <TextBlock x:Name="StatusText" Text="Ready" Foreground="White"/>
                        </StatusBarItem>
                        <StatusBarItem HorizontalAlignment="Right">
                            <TextBlock Text="{Binding ElementName=PlaylistBox, Path=Items.Count, StringFormat='Tracks: {0}'}" 
                                       Foreground="White"/>
                        </StatusBarItem>
                    </StatusBar>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>