<Window x:Class="DapolUltimate_MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dapol Ultimate Player" Height="600" Width="850"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Glow Effect -->
        <DropShadowEffect x:Key="GlowEffect"
                          Color="#4DAEEF"
                          Direction="0"
                          ShadowDepth="0"
                          Opacity="0.8"
                          BlurRadius="15"/>

        <!-- Brush Resources -->
        <LinearGradientBrush x:Key="ButtonGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#9933AAFF" Offset="0"/>
            <GradientStop Color="#660077DD" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SliderFillBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#7F33AAFF" Offset="0"/>
            <GradientStop Color="#9F0088DD" Offset="1"/>
        </LinearGradientBrush>

        <!-- Button Style -->
        <Style x:Key="RetroButtonStyle" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Width" Value="115"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Button Background -->
                            <Border x:Name="ButtonBorder" 
                                    CornerRadius="8" 
                                    Background="#7F14B4E6">
                                <Border.Effect>
                                    <DropShadowEffect Color="#3366FF" ShadowDepth="0" BlurRadius="12" Opacity="0.7"/>
                                </Border.Effect>

                                <!-- Gradient Overlay -->
                                <Border CornerRadius="8">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#9933AAFF" Offset="0"/>
                                            <GradientStop Color="#660077DD" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>

                                    <!-- Glossy Highlight -->
                                    <Grid>
                                        <Border CornerRadius="8,8,0,0" 
                                                Height="22"
                                                VerticalAlignment="Top">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#40FFFFFF" Offset="0"/>
                                                    <GradientStop Color="#10FFFFFF" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>

                                        <!-- Content Presenter -->
                                        <ContentPresenter x:Name="contentPresenter" 
                                                          HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center" 
                                                          TextElement.FontWeight="{TemplateBinding FontWeight}"
                                                          TextElement.FontFamily="{TemplateBinding FontFamily}"
                                                          TextElement.Foreground="{TemplateBinding Foreground}"
                                                          Margin="{TemplateBinding Padding}"/>
                                    </Grid>
                                </Border>
                            </Border>
                        </Grid>

                        <!-- Visual States -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#80FFFFFF" ShadowDepth="0" BlurRadius="20" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#9F33CCFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#7F0077DD"/>
                                <Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#3366FF" ShadowDepth="0" BlurRadius="8" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.5"/>
                                <Setter Property="Foreground" Value="#AAAAAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Обновленный стиль для слайдера -->
        <Style x:Key="RetroSliderStyle" TargetType="Slider">
            <Setter Property="Foreground" Value="#33AAFF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="IsMoveToPointEnabled" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <!-- Фон слайдера -->
                            <Border x:Name="TrackBackground" 
                            Height="8" 
                            CornerRadius="4" 
                            Background="#203366AA"
                            Margin="0,5,0,5">
                                <Border.Effect>
                                    <DropShadowEffect Color="#3366FF" ShadowDepth="0" BlurRadius="8" Opacity="0.3"/>
                                </Border.Effect>
                            </Border>

                            <!-- Заполненная часть -->
                            <Border x:Name="TrackFill"
                            Height="8"
                            CornerRadius="4"
                            Background="{StaticResource SliderFillBrush}"
                            HorizontalAlignment="Left"
                            Margin="0,5,0,5">
                                <Border.Effect>
                                    <DropShadowEffect Color="#33AAFF" ShadowDepth="0" BlurRadius="5" Opacity="0.7"/>
                                </Border.Effect>
                            </Border>

                            <!-- Ползунок -->
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Width="16" Height="16">
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Grid>
                                                    <Ellipse Fill="#FFFFFF">
                                                        <Ellipse.Effect>
                                                            <DropShadowEffect Color="#33AAFF" ShadowDepth="0" BlurRadius="10" Opacity="0.8"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                    <Ellipse Width="12" Height="12" Fill="#0088DD"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Thumb" Property="Width" Value="18"/>
                                <Setter TargetName="Thumb" Property="Height" Value="18"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="VolumeSliderStyle" TargetType="Slider" BasedOn="{StaticResource RetroSliderStyle}">
            <Setter Property="IsMoveToPointEnabled" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border x:Name="TrackBackground" 
                            Height="6" 
                            CornerRadius="3" 
                            Background="#203366AA"
                            Margin="0,7,0,7">
                                <Border.Effect>
                                    <DropShadowEffect Color="#3366FF" ShadowDepth="0" BlurRadius="5" Opacity="0.3"/>
                                </Border.Effect>
                            </Border>

                            <Border x:Name="TrackFill"
                            Height="6"
                            CornerRadius="3"
                            Background="{StaticResource SliderFillBrush}"
                            HorizontalAlignment="Left"
                            Margin="0,7,0,7">
                                <Border.Effect>
                                    <DropShadowEffect Color="#33AAFF" ShadowDepth="0" BlurRadius="5" Opacity="0.7"/>
                                </Border.Effect>
                            </Border>

                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Width="14" Height="14">
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Grid>
                                                    <Ellipse Fill="#FFFFFF">
                                                        <Ellipse.Effect>
                                                            <DropShadowEffect Color="#33AAFF" ShadowDepth="0" BlurRadius="8" Opacity="0.8"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                    <Ellipse Width="10" Height="10" Fill="#0088DD"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Thumb" Property="Width" Value="16"/>
                                <Setter TargetName="Thumb" Property="Height" Value="16"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Кнопка Mute/Unmute -->
        <Style x:Key="MuteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <ContentPresenter x:Name="contentPresenter" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                            <Border x:Name="RippleEffect" 
                            Opacity="0"
                            Background="#40FFFFFF"
                            CornerRadius="15"
                            Width="0" Height="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="contentPresenter" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#33AAFF" ShadowDepth="0" BlurRadius="10" Opacity="0.7"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="RippleEffect" Property="Width" Value="40"/>
                                <Setter TargetName="RippleEffect" Property="Height" Value="40"/>
                                <Setter TargetName="RippleEffect" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Background with Gradient -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF001428" Offset="0"/>
                <GradientStop Color="#FF002A52" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Decorative Elements -->
        <Canvas>
            <!-- Retro circles decoration -->
            <Ellipse Width="400" Height="400" Canvas.Left="-150" Canvas.Top="-150">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#15FFFFFF" Offset="0"/>
                        <GradientStop Color="#00FFFFFF" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Width="300" Height="300" Canvas.Right="-100" Canvas.Bottom="-100">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#1533AAFF" Offset="0"/>
                        <GradientStop Color="#00FFFFFF" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>

        <!-- Content with glassmorphism panel -->
        <Border Margin="20" CornerRadius="20" Background="#30FFFFFF">
            <Border.Effect>
                <DropShadowEffect Color="#000000" ShadowDepth="5" BlurRadius="15" Opacity="0.5"/>
            </Border.Effect>

            <Grid Margin="15">
                <!-- Header -->
                <StackPanel VerticalAlignment="Top" Margin="0,20,0,30">
                    <!-- Title -->
                    <TextBlock Text="DAPOL ULTIMATE PLAYER"
                              FontSize="32"
                              FontWeight="ExtraBold"
                              FontFamily="Segoe UI"
                              Foreground="#FFFFFF"
                              HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#33AAFF" ShadowDepth="0" BlurRadius="15" Opacity="0.9"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <!-- Subtitle -->
                    <TextBlock Text="PREMIUM MUSIC EXPERIENCE"
                              FontSize="14"
                              FontWeight="Bold"
                              FontFamily="Segoe UI"
                              Foreground="#80FFFFFF"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#33AAFF" ShadowDepth="0" BlurRadius="5" Opacity="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>

                <!-- Track Display -->
                <Border CornerRadius="12" 
                        Margin="0,116,0,0" 
                        Height="90" 
                        VerticalAlignment="Top"
                        Background="#4033AAFF">
                    <Border.Effect>
                        <DropShadowEffect Color="#33AAFF" ShadowDepth="0" BlurRadius="15" Opacity="0.7"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Music Icon -->
                        <Border Width="70" Height="70" Margin="15,0,0,0" CornerRadius="10" Background="#7F0088DD" VerticalAlignment="Center">
                            <TextBlock Text="♪" 
                                       FontSize="36" 
                                       Foreground="#FFFFFF" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#FFFFFF" ShadowDepth="0" BlurRadius="10" Opacity="0.7"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </Border>

                        <!-- Track Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,15,0">
                            <TextBlock x:Name="TrackTitle"
                                       Text="No track loaded"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       FontFamily="Segoe UI"
                                       Foreground="#FFFFFF"
                                       TextTrimming="CharacterEllipsis">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#000000" ShadowDepth="1" BlurRadius="2" Opacity="0.7"/>
                                </TextBlock.Effect>
                            </TextBlock>

                            <TextBlock x:Name="TrackArtist"
                                       Text="Unknown Artist"
                                       FontSize="16"
                                       FontFamily="Segoe UI"
                                       Foreground="#CCFFFFFF"
                                       Margin="0,5,0,0"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>

                        <!-- Time Display -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="0,0,15,0">
                            <TextBlock x:Name="CurrentTimeText"
                                       Text="00:00"
                                       FontSize="18"
                                       FontFamily="Consolas"
                                       FontWeight="Bold"
                                       Foreground="#FFFFFF"/>
                            <TextBlock Text="/"
                                       FontSize="18"
                                       FontFamily="Consolas"
                                       FontWeight="Bold"
                                       Foreground="#80FFFFFF"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TotalTimeText"
                                       Text="00:00"
                                       FontSize="18"
                                       FontFamily="Consolas"
                                       FontWeight="Bold"
                                       Foreground="#80FFFFFF"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Media Controls -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,40,0,0">
                    <Button Content="⏮ PREV" Style="{StaticResource RetroButtonStyle}" Click="PreviousButton_Click"/>
                    <Button Content="🔍 LOAD" Style="{StaticResource RetroButtonStyle}" Click="LoadFileButton_Click"/>
                    <Button x:Name="PlayPauseButton" Content="⏯ PLAY" Style="{StaticResource RetroButtonStyle}" Click="PlayPauseButton_Click" Width="140"/>
                    <Button Content="⏹ STOP" Style="{StaticResource RetroButtonStyle}" Click="StopButton_Click"/>
                    <Button Content="⏭ NEXT" Style="{StaticResource RetroButtonStyle}" Click="NextButton_Click"/>
                </StackPanel>

                <!-- Progress Bar -->
                <Border CornerRadius="12" 
                        Background="#20FFFFFF"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,120"
                        Padding="20,10">
                    <Slider x:Name="SeekSlider"
                            Minimum="0"
                            Maximum="100"
                            Style="{StaticResource RetroSliderStyle}"
                            ValueChanged="SeekSlider_ValueChanged"/>
                </Border>

                <!-- Volume Control -->
                <!-- Volume Control -->
                <StackPanel Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Margin="0,0,0,50">
                    <Button x:Name="MuteButton" 
            Content="🔊" 
            Style="{StaticResource MuteButtonStyle}" 
            Click="MuteButton_Click"
            Margin="0,0,8,0"/>

                    <Slider x:Name="VolumeSlider"
            Width="250" 
            Minimum="0" 
            Maximum="1"
            ValueChanged="VolumeSlider_ValueChanged"
            Value="0.5"
            Style="{StaticResource VolumeSliderStyle}"/>
                </StackPanel>

                <!-- Decorative retro lines -->
                <Border BorderThickness="0,1,0,0" 
                        BorderBrush="#2033AAFF" 
                        VerticalAlignment="Bottom" 
                        Margin="50,0,50,90"/>

                <Border BorderThickness="0,1,0,0" 
                        BorderBrush="#1033AAFF" 
                        VerticalAlignment="Bottom" 
                        Margin="80,0,80,86"/>
            </Grid>
        </Border>
    </Grid>
</Window>