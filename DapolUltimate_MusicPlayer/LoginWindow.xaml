<Window x:Class="DapolUltimate_MusicPlayer.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource LoginTitle}"
        Height="220"
        Width="320"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackground}">
    <StackPanel Margin="20">
        <TextBlock Text="{DynamicResource UsernameLabel}"
                   Margin="0,0,0,5"
                   Foreground="{DynamicResource TextColor}"/>
        <TextBox x:Name="UsernameBox" Margin="0,0,0,10" Style="{DynamicResource TextBoxStyle}"/>
        <TextBlock Text="{DynamicResource PasswordLabel}"
                   Margin="0,0,0,5"
                   Foreground="{DynamicResource TextColor}"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" Foreground="{DynamicResource TextColor}" Background="#30303030"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="{DynamicResource LoginButton}" Click="Login_Click"
                    Margin="0,0,5,0" Style="{DynamicResource ButtonStyle}"/>
            <Button Content="{DynamicResource RegisterButton}" Click="Register_Click"
                    Style="{DynamicResource ButtonStyle}"/>
        </StackPanel>
    </StackPanel>
</Window>
