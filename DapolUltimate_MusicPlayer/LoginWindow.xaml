<Window x:Class="DapolUltimate_MusicPlayer.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource LoginTitle}"
        Height="220"
        Width="320"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackground}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="{DynamicResource UsernameLabel}"
                   Margin="0,0,0,5"
                   Foreground="{DynamicResource TextColor}"/>
        <TextBox Grid.Row="1" x:Name="UsernameBox" Margin="0,0,0,10" Style="{DynamicResource TextBoxStyle}"/>

        <TextBlock Grid.Row="2"
                   Text="{DynamicResource PasswordLabel}"
                   Margin="0,0,0,5"
                   Foreground="{DynamicResource TextColor}"/>
        <PasswordBox Grid.Row="3" x:Name="PasswordBox" Margin="0,0,0,10" Foreground="{DynamicResource TextColor}" Background="#30303030"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="{DynamicResource LoginButton}" Click="Login_Click"
                    Margin="0,0,5,0" Style="{DynamicResource ButtonStyle}"/>
            <Button Content="{DynamicResource RegisterButton}" Click="Register_Click"
                    Style="{DynamicResource ButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
